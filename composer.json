{
  "name": "bupy7/php-html-form",
  "description": "A basic framework agnostic form building package with a few extra niceties like remembering old input and retrieving error messages.",
  "authors": [
    {
      "name": "Adam Wathan",
      "email": "adam.wathan@gmail.com"
    },
    {
      "name": "Vasily Velosloodcev",
      "email": "bupy765@gmail.com"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "~7.1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^6.0",
    "mockery/mockery": "~0.9",
    "satooshi/php-coveralls": "^1.0"
  },
  "autoload": {
    "psr-0": {
      "AdamWathan\\Form\\": "src/"
    }
  },
  "autoload-dev": {
    "classmap": ["tests/"]
  },
  "scripts": {
    "test:run": "vendor/bin/phpunit",
    "test:run-with-cov": "vendor/bin/phpunit --coverage-html"
  }
}

